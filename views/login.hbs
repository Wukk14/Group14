        <div class='form-style-8'>

                <form action ="/login" method="POST">
                

                    <!-- Registration Page -->
                    <h2>LOGIN</h2>

                    <label for="firstname">Username</label>
                    <input type="text" name='username' id="username" value='{{username}}' placeholder="Username"/>

                    <label for="lastname">Password</label>
                    <input type="password" name="password" id="password" placeholder="Password"/>
                                
                    
                    <a href="" data-toggle="modal" data-target="#passwordResetModal">
                    Forgot Password?
                    </a>
                    <br>
                    <br>
                    <p>{{title}}</p>
                    <br>

                    <input type="submit" value="LOGIN" />

                <br><br>

                </form>
            </div>
            
        <!-- Modal -->
        <div class="modal fade" id="passwordResetModal" tabindex="-1" role="dialog" aria-labelledby="passwordModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content" style="background-color: transparent; border: none">
                    <div class='form-style-8'>
                    <div class="modal-header">
                        <h5 class="modal-title" id="passwordResetModalLabel">Password Recovery</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: black;">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        
                        <form action="/recovery" method="POST">
                        
                            <!-- Reset Form -->                        
                            <label for="email">Email</label>
                            <input type="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" name='email' id="email" value='{{email}}' placeholder="Email" />

                            <br>


                            <p>If an account associated with that email exists,
                            you will be sent a recovery password.</p>
                            

                        </div>
                            <input type="submit" value="Submit" />                        
                        </form>

                        </div>
                    </div>
                </div>
            </div>
